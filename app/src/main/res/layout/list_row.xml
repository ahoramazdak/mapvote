<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/side_nav_bar"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:text="اقدام"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/doButton"
        android:layout_marginStart="16dp"
        android:layout_alignBaseline="@+id/archiveButton"
        android:layout_alignBottom="@+id/archiveButton"
        android:layout_toEndOf="@+id/refreshbutton" />

    <Button
        android:text="به روز رسانی"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/refreshbutton"
        android:layout_marginStart="16dp"
        android:layout_alignBaseline="@+id/doButton"
        android:layout_alignBottom="@+id/doButton"
        android:layout_toEndOf="@+id/archiveButton" />

    <Button
        android:text="آرشیو"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/archiveButton"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/originID"
        android:layout_alignStart="@+id/originID" />

    <ImageView
        android:id="@+id/originID"
        android:layout_width="200dp"
        android:padding="25dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="00000"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/pharmacyTitle"
        android:layout_height="150dp" />

    <TextView
        android:id="@+id/pharmacyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:textSize="18dp"
        android:text="داروخانه من"
        android:layout_alignBottom="@+id/originID"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="53dp" />

</RelativeLayout>